BOT_TOKEN=your_bot_token_from_botfather
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/vibe_market
ADMIN_CHAT_ID=
# Канал для автопубликации после approve — одно значение: @vibecode777 или числовой id (-100...)
FEED_CHAT_ID=
ADMIN_IDS=1022192008
# Legacy: ADMIN_TELEGRAM_IDS is also accepted if ADMIN_IDS is unset
ADMIN_TELEGRAM_IDS=
LOG_LEVEL=INFO
APP_ENV=local
AUTO_MIGRATE=true
V2_ENABLED=false
V2_CANARY_MODE=false
V2_ALLOWLIST=

# ============================================
# Mini App Settings (Vercel + VPS integration)
# ============================================

# WebApp URL (HTTPS required!) - deployed frontend URL for Telegram Mini App
# Set this on VPS in .env for bot to use
# Example: https://your-app.vercel.app
WEBAPP_URL=https://<your-vercel-app>.vercel.app

# Public API URL for Mini App frontend (accessible from internet via HTTPS)
# Set this in Vercel env as VITE_API_PUBLIC_URL for frontend
# Example: https://api.yourdomain.com (with Nginx/Caddy SSL termination)
# For debug only: http://<VPS_IP>:8000 (works in browser, not in Telegram WebApp)
API_PUBLIC_URL=https://api.<your-domain>

# ============================================
# Mini App API Settings
# ============================================

API_JWT_SECRET=change-me-in-production
API_JWT_TTL_MIN=43200

# Comma-separated list of allowed origins for CORS
# Must include WEBAPP_URL and https://web.telegram.org for production
# Example: https://myapp.vercel.app,https://web.telegram.org
WEBAPP_ORIGINS=

# MVP mode: skip Telegram initData signature verification (INSECURE!)
# WARNING: Set to true ONLY for local debug/testing without proper bot token!
# NEVER use true in production — anyone can impersonate any user!
TG_INIT_DATA_SKIP_VERIFY=false

# ============================================
# Version info (auto-set by deploy.yml)
# ============================================
GIT_SHA=
GIT_BRANCH=
BUILD_TIME=
